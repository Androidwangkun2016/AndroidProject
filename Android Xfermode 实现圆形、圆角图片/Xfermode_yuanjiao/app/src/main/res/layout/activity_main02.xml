<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res/com.wangkun.xfermode_yuanjiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.wangkun.xfermode_yuanjiao.view.RoundImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/qiqiu" >
        </com.wangkun.xfermode_yuanjiao.view.RoundImageView>

        <com.wangkun.xfermode_yuanjiao.view.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/qiqiu" >
        </com.wangkun.xfermode_yuanjiao.view.RoundImageView>

        <com.wangkun.xfermode_yuanjiao.view.RoundImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/qiqiu" >
        </com.wangkun.xfermode_yuanjiao.view.RoundImageView>

        <com.wangkun.xfermode_yuanjiao.view.RoundImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/aa" >
        </com.wangkun.xfermode_yuanjiao.view.RoundImageView>

        <com.wangkun.xfermode_yuanjiao.view.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" >
        </com.wangkun.xfermode_yuanjiao.view.RoundImageView>

        <com.wangkun.xfermode_yuanjiao.view.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/aa"
            zhy:borderRadius="20dp"
            zhy:type="round" >
        </com.wangkun.xfermode_yuanjiao.view.RoundImageView>

        <com.wangkun.xfermode_yuanjiao.view.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon"
            zhy:borderRadius="40dp"
            zhy:type="round" >
        </com.wangkun.xfermode_yuanjiao.view.RoundImageView>

        <com.wangkun.xfermode_yuanjiao.view.RoundImageView
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/qiqiu"
            zhy:borderRadius="60dp"
            zhy:type="round" >
        </com.wangkun.xfermode_yuanjiao.view.RoundImageView>
    </LinearLayout>

</ScrollView>